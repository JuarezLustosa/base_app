.middle-box.text-center.loginscreen.animated.fadeInDown
  div
    div
      h1.logo-name = t('views.appname')
      p = t('views.introduce_sentece')

    = form_for(resource, as: resource_name, url: registration_path(resource_name),
      class: 'm-t') do |f|
      = render 'shared/error_messages', object: f.object


      = f.text_field :name,
        autofocus: true,
        placeholder: "Nome",
        class: 'form-control form-group'

      = f.text_field :email,
        autofocus: true,
        placeholder: "Email",
        class: 'form-control form-group'

      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        p
          | "#{t('views.waiting_confirmation')}"
          = resource.unconfirmed_email

      = f.password_field :password, autocomplete: "off",
        hint: "#{t('views.leave_it_blank')}",
        required: false,
        placeholder: "Alterar Senha.",
        class: 'form-control form-group'

      = f.password_field :password_confirmation,
        required: false,
        class: 'form-control form-group',
        placeholder: "Confirmar"


      = f.password_field :current_password,
        hint: "#{t('views.current_password_change')}",
        required: true,
        class: 'form-control form-group',
        placeholder: "Senha Atual"

      = f.submit class: "btn btn-primary block full-width m-b"

    = link_to "Cancelar minha conta",
      registration_path(resource_name),
      data: { confirm: "Tem certeza? Por favor continue conosco!!" },
      method: :delete,
      class: "btn btn-danger block full-width m-b"

